<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:v="clr-namespace:AviUtlExoToAup2Converter.Views"
                    xmlns:vmc="clr-namespace:AviUtlExoToAup2Converter.ViewModels.ConvertLogic">
    <v:ConvertLogicTemplateSelector x:Key="convertLogicTemplateSelector"/>
    <DataTemplate DataType="{x:Type vmc:LogicItemViewModel}">
        <Grid Background="#EEEEEE">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ContentPresenter Content="{Binding Condition}" ContentTemplateSelector="{StaticResource convertLogicTemplateSelector}"/>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="エフェクト名："/>
                <TextBlock Grid.Column="1" Text="{Binding EffectName}"/>
                <TextBlock Grid.Row="1" Text="変数："/>
                <ItemsControl Grid.Row="1" Grid.Column="1" ItemsSource="{Binding LocalVars}"/>
                <TextBlock Grid.Row="2" Text="マッピング：" VerticalAlignment="Center"/>
                <ItemsControl Grid.Row="2" Grid.Column="1" ItemsSource="{Binding Mappers}" ItemTemplateSelector="{StaticResource convertLogicTemplateSelector}"/>
            </Grid>
        </Grid>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vmc:VariableViewModel}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock>
                <Run Text="{Binding Key}"/>
                <Run Text="："/>
            </TextBlock>
            <ContentPresenter Grid.Column="1" Content="{Binding Value}" ContentTemplateSelector="{StaticResource convertLogicTemplateSelector}"/>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="IntValueViewModel" DataType="{x:Type vmc:IntValueViewModel}">
        <Grid Background="Cyan">
            <TextBlock Text="{Binding Value}"/>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="FloatValueViewModel" DataType="{x:Type vmc:FloatValueViewModel}">
        <Grid Background="Yellow">
            <TextBlock Text="{Binding Value}"/>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="StringValueViewModel" DataType="{x:Type vmc:StringValueViewModel}">
        <Grid Background="LightGreen">
            <TextBlock Text="{Binding Value}"/>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="GetAttributeValueViewModel`1" DataType="{x:Type vmc:GetAttributeValueViewModel`1}">
        <Grid Background="CornflowerBlue">
            <TextBlock>
                <Run Text="{Binding From}"/>
                <Run Text="("/>
                <Run Text="{Binding Reference}"/>
                <Run Text=")"/>
            </TextBlock>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="GetPropertyViewModel`1" DataType="{x:Type vmc:GetPropertyViewModel`1}">
        <Grid Background="CadetBlue">
            <TextBlock>
                <Run Text="{Binding Property}"/>
                <Run Text="("/>
                <Run Text="{Binding Reference}"/>
                <Run Text=")"/>
            </TextBlock>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="ConditionEqualViewModel`1" DataType="{x:Type vmc:ConditionEqualViewModel`1}">
        <StackPanel Background="PaleVioletRed" Orientation="Horizontal" VerticalAlignment="Center">
            <ContentPresenter Content="{Binding Operand1}" ContentTemplateSelector="{StaticResource convertLogicTemplateSelector}" Margin="5"/>
            <TextBlock Text="と"/>
            <ContentPresenter Content="{Binding Operand2}" ContentTemplateSelector="{StaticResource convertLogicTemplateSelector}" Margin="5"/>
            <TextBlock Text="が等しい"/>
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="BoolConditionEqualViewModel" DataType="{x:Type vmc:BoolConditionEqualViewModel}">
        <StackPanel Background="Pink" HorizontalAlignment="Center">
            <ContentPresenter Content="{Binding Operand1}" ContentTemplateSelector="{StaticResource convertLogicTemplateSelector}" Margin="5"/>
            <TextBlock Text="かつ"/>
            <ContentPresenter Content="{Binding Operand2}" ContentTemplateSelector="{StaticResource convertLogicTemplateSelector}" Margin="5"/>
            <TextBlock Text="のとき"/>
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="IntMapperViewModel" DataType="{x:Type vmc:IntMapperViewModel}">
        <StackPanel Background="DarkCyan" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="{Binding To}"/>
            <TextBlock Text="←"/>
            <ContentPresenter Content="{Binding From}" ContentTemplateSelector="{StaticResource convertLogicTemplateSelector}" Margin="5"/>
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="FloatMapperViewModel" DataType="{x:Type vmc:FloatMapperViewModel}">
        <StackPanel Background="Orange" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="{Binding To}"/>
            <TextBlock Text="←"/>
            <ContentPresenter Content="{Binding From}" ContentTemplateSelector="{StaticResource convertLogicTemplateSelector}" Margin="5"/>
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="StringMapperViewModel" DataType="{x:Type vmc:StringMapperViewModel}">
        <StackPanel Background="Green" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="{Binding To}"/>
            <TextBlock Text="←"/>
            <ContentPresenter Content="{Binding From}" ContentTemplateSelector="{StaticResource convertLogicTemplateSelector}" Margin="5"/>
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="PlayPositionMapperViewModel" DataType="{x:Type vmc:PlayPositionMapperViewModel}">
        <StackPanel Background="Brown" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="{Binding To}"/>
            <TextBlock Text="←"/>
            <ContentPresenter Content="{Binding Start}" ContentTemplateSelector="{StaticResource convertLogicTemplateSelector}" Margin="5"/>
            <TextBlock Text="～"/>
            <ContentPresenter Content="{Binding End}" ContentTemplateSelector="{StaticResource convertLogicTemplateSelector}" Margin="5"/>
            <TextBlock Text="再生範囲"/>
            <ContentPresenter Content="{Binding Range}" ContentTemplateSelector="{StaticResource convertLogicTemplateSelector}" Margin="5"/>
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="CalcSubViewModel`1" DataType="{x:Type vmc:CalcSubViewModel`1}">
        <StackPanel Background="DarkOliveGreen" Orientation="Horizontal"> 
            <ContentPresenter Content="{Binding Operand1}" ContentTemplateSelector="{StaticResource convertLogicTemplateSelector}" Margin="5"/>
            <TextBlock Text="－"/>
            <ContentPresenter Content="{Binding Operand2}" ContentTemplateSelector="{StaticResource convertLogicTemplateSelector}" Margin="5"/>
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="CalcSumViewModel`1" DataType="{x:Type vmc:CalcSumViewModel`1}">
        <StackPanel Background="DarkGreen" Orientation="Horizontal">
            <ContentPresenter Content="{Binding Operand1}" ContentTemplateSelector="{StaticResource convertLogicTemplateSelector}" Margin="5"/>
            <TextBlock Text="＋"/>
            <ContentPresenter Content="{Binding Operand2}" ContentTemplateSelector="{StaticResource convertLogicTemplateSelector}" Margin="5"/>
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="FrameToTimeViewModel" DataType="{x:Type vmc:FrameToTimeViewModel}">
        <StackPanel Background="Chocolate" HorizontalAlignment="Center">
            <TextBlock Text="フレームから時間へ"/>
            <ContentPresenter Content="{Binding Frame}" ContentTemplateSelector="{StaticResource convertLogicTemplateSelector}" Margin="5"/>
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="BlendModeValueViewModel" DataType="{x:Type vmc:BlendModeValueViewModel}">
        <StackPanel Background="Indigo" HorizontalAlignment="Center">
            <TextBlock Text="合成モードへ変換"/>
            <ContentPresenter Content="{Binding Value}" ContentTemplateSelector="{StaticResource convertLogicTemplateSelector}" Margin="5"/>
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="FindFirstFilterByNameViewModel" DataType="{x:Type vmc:FindFirstFilterByNameViewModel}">
        <StackPanel Background="Gold" HorizontalAlignment="Center">
            <TextBlock Text="フィルタを名前で検索"/>
            <ContentPresenter Content="{Binding Name}" ContentTemplateSelector="{StaticResource convertLogicTemplateSelector}" Margin="5"/>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>