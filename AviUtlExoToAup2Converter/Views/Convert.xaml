<UserControl x:Class="AviUtlExoToAup2Converter.Views.Convert"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AviUtlExoToAup2Converter.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="{x:Type Expander}">
            <Setter Property="IsExpanded" Value="True"/>
        </Style>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Label Content="EXOファイルパス："/>
            <TextBox Grid.Column="1" Text="{Binding ExoPath, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Grid.Column="2" Content="読み込み" Command="{Binding ImportCommand}"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Label Content="変換ロジック定義XMLファイルパス："/>
            <TextBox Grid.Column="1" Text="{Binding LogicPath, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Grid.Column="2" Content="読み込み" Command="{Binding LoadLogicCommand}"/>
        </Grid>
        <Grid Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Label Content="Aup2ファイルパス："/>
            <TextBox Grid.Column="1" Text="{Binding Aup2Path, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Grid.Column="2" Content="保存" Command="{Binding ExportCommand}"/>
        </Grid>
        <ScrollViewer Grid.Row="2">
            <ContentPresenter Content="{Binding ExoItem}"/>
        </ScrollViewer>
        <Button Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" Content="変換" Command="{Binding InvokeCommand}"/>
        <ScrollViewer Grid.Row="1" Grid.RowSpan="2" Grid.Column="2">
            <ContentPresenter Content="{Binding Aup2Item}"/>
        </ScrollViewer>
    </Grid>
</UserControl>
