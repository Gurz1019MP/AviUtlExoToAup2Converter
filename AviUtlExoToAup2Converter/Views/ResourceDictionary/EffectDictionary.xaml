<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vmiae="clr-namespace:AviUtlExoToAup2Converter.ViewModels.Item.Aup2.Effect">
    <DataTemplate DataType="{x:Type vmiae:MovieFileViewModel}">
        <Expander BorderBrush="DarkGray"
                  BorderThickness="1"
                  Margin="2"
                  Header="{Binding EffectName}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="PlayPosition.Start"/>
                <TextBlock Grid.Column="1" Text="{Binding PlayPosition.Start}"/>
                <TextBlock Grid.Row="1" Text="PlayPosition.End"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding PlayPosition.End}"/>
                <TextBlock Grid.Row="2" Text="PlayRange.Start"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding PlayRange.Start}"/>
                <TextBlock Grid.Row="3" Text="PlayRange.End"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding PlayRange.End}"/>
                <TextBlock Grid.Row="4" Text="PlaySpeed"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding PlaySpeed}"/>
                <TextBlock Grid.Row="5" Text="FilePath"/>
                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding FilePath}"/>
                <TextBlock Grid.Row="6" Text="Track"/>
                <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding Track}"/>
                <TextBlock Grid.Row="7" Text="IsLoop"/>
                <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding IsLoop}"/>
                <TextBlock Grid.Row="8" Text="HaveAudio"/>
                <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding HaveAudio}"/>
            </Grid>
        </Expander>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vmiae:DefaultDrawViewModel}">
        <Expander BorderBrush="DarkGray"
              BorderThickness="1"
              Margin="2"
              Header="{Binding EffectName}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Position.X"/>
                    <TextBlock Grid.Column="1" Text="{Binding Position.X}"/>
                    <TextBlock Grid.Column="2" Text="Position.Y"/>
                    <TextBlock Grid.Column="3" Text="{Binding Position.Y}"/>
                    <TextBlock Grid.Column="4" Text="Position.Z"/>
                    <TextBlock Grid.Column="5" Text="{Binding Position.Z}"/>
                    <TextBlock Grid.Row="1" Text="Center.X"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Center.X}"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Center.Y"/>
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding Center.Y}"/>
                    <TextBlock Grid.Row="1" Grid.Column="4" Text="Center.Z"/>
                    <TextBlock Grid.Row="1" Grid.Column="5" Text="{Binding Center.Z}"/>
                    <TextBlock Grid.Row="2" Text="Rotate.X"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Rotate.X}"/>
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="Rotate.Y"/>
                    <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding Rotate.Y}"/>
                    <TextBlock Grid.Row="2" Grid.Column="4" Text="Rotate.Z"/>
                    <TextBlock Grid.Row="2" Grid.Column="5" Text="{Binding Rotate.Z}"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Zoom"/>
                    <TextBlock Grid.Column="1" Text="{Binding Zoom}"/>
                    <TextBlock Grid.Row="1" Text="Aspect"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Aspect}"/>
                    <TextBlock Grid.Row="2" Text="Alpha"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Alpha}"/>
                    <TextBlock Grid.Row="3" Text="BlendMode"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding BlendMode}"/>
                </Grid>
            </Grid>
        </Expander>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vmiae:DefaultPlayViewModel}">
        <Expander BorderBrush="DarkGray"
              BorderThickness="1"
              Margin="2"
              Header="{Binding EffectName}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Volume"/>
                <TextBlock Grid.Column="1" Text="{Binding Volume}"/>
                <TextBlock Grid.Row="1" Text="Pan"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Pan}"/>
            </Grid>
        </Expander>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vmiae:GeneralEffectViewModel}">
        <Expander BorderBrush="DarkGray"
          BorderThickness="1"
          Margin="2"
          Header="{Binding Name}">
            <ItemsControl ItemsSource="{Binding Attributes}" ItemTemplate="{StaticResource AttributeTemplate}"/>
        </Expander>
    </DataTemplate>
</ResourceDictionary>