<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vmc="clr-namespace:AviUtlExoToAup2Converter.ViewModels.ConvertLogic">
    <DataTemplate DataType="{x:Type vmc:LogicItemViewModel}">
        <Grid Background="#EEEEEE">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ContentPresenter Content="{Binding Condition}"/>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="エフェクト名："/>
                <TextBlock Grid.Column="1" Text="{Binding EffectName}"/>
                <TextBlock Grid.Row="1" Text="変数："/>
                <ItemsControl Grid.Row="1" Grid.Column="1" ItemsSource="{Binding LocalVars}"/>
                <TextBlock Grid.Row="2" Text="マッピング："/>
                <ItemsControl Grid.Row="2" Grid.Column="1" ItemsSource="{Binding Mappers}"/>
            </Grid>
        </Grid>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vmc:ConditionEqualViewModel`1}">
        <Grid Background="LightPink">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ContentPresenter Content="{Binding Operand1}"/>
            <TextBlock Grid.Column="1" Text="と"/>
            <ContentPresenter Grid.Column="2" Content="{Binding Operand2}"/>
            <TextBlock Grid.Column="3" Text="が等しい"/>
        </Grid>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vmc:BoolConditionEqualViewModel}">
        <Grid Background="Pink">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ContentPresenter Content="{Binding Operand1}"/>
            <TextBlock Grid.Row="1" Text="かつ"/>
            <ContentPresenter Grid.Row="2" Content="{Binding Operand2}"/>
            <TextBlock Grid.Row="3" Text="のとき"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>