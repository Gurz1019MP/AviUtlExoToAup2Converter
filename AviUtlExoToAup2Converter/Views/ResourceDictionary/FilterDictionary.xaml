<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vmief="clr-namespace:AviUtlExoToAup2Converter.ViewModels.Item.Exo.Filter"
                    xmlns:mief="clr-namespace:AviUtlExoToAup2Converter.Models.Item.Exo.Filter">
    <DataTemplate DataType="{x:Type vmief:AudioFileViewModel}">
        <Expander BorderBrush="DarkGray"
                  BorderThickness="1"
                  Margin="2"
                  Header="{Binding Name}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Position"/>
                <TextBlock Grid.Column="1" Text="{Binding Position}"/>
                <TextBlock Grid.Row="1" Text="Speed"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Speed}"/>
                <TextBlock Grid.Row="2" Text="Loop"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Loop}"/>
                <TextBlock Grid.Row="3" Text="Alignment"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Alignment}"/>
                <TextBlock Grid.Row="4" Text="File"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding File}"/>
            </Grid>
        </Expander>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vmief:DefaultDrawViewModel}">
        <Expander BorderBrush="DarkGray"
                  BorderThickness="1"
                  Margin="2"
                  Header="{Binding Name}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="X"/>
                <TextBlock Grid.Column="1" Text="{Binding X}"/>
                <TextBlock Grid.Row="1" Text="Y"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Y}"/>
                <TextBlock Grid.Row="2" Text="Z"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Z}"/>
                <TextBlock Grid.Row="3" Text="Zoom"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Zoom}"/>
                <TextBlock Grid.Row="4" Text="Alpha"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Alpha}"/>
                <TextBlock Grid.Row="5" Text="Rotate"/>
                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Rotate}"/>
                <TextBlock Grid.Row="6" Text="Blend"/>
                <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding Blend}"/>
            </Grid>
        </Expander>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vmief:DefaultPlayViewModel}">
        <Expander BorderBrush="DarkGray"
                  BorderThickness="1"
                  Margin="2"
                  Header="{Binding Name}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Volume"/>
                <TextBlock Grid.Column="1" Text="{Binding Volume}"/>
                <TextBlock Grid.Row="1" Text="Pan"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Pan}"/>
            </Grid>
        </Expander>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vmief:MovieFileViewModel}">
        <Expander BorderBrush="DarkGray"
                  BorderThickness="1"
                  Margin="2"
                  Header="{Binding Name}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Position"/>
                <TextBlock Grid.Column="1" Text="{Binding Position}"/>
                <TextBlock Grid.Row="1" Text="Speed"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Speed}"/>
                <TextBlock Grid.Row="2" Text="Loop"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Loop}"/>
                <TextBlock Grid.Row="3" Text="Alpha"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Alpha}"/>
                <TextBlock Grid.Row="4" Text="File"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding File}"/>
            </Grid>
        </Expander>
    </DataTemplate>
    <DataTemplate x:Key="AttributeTemplate" DataType="{x:Type mief:IAttribute}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding Name}"/>
            <TextBlock Grid.Column="1" Text="{Binding ValueString}"/>
        </Grid>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vmief:GeneralFilterViewModel}">
        <Expander BorderBrush="DarkGray"
              BorderThickness="1"
              Margin="2"
              Header="{Binding Name}">
            <ItemsControl ItemsSource="{Binding Attributes}" ItemTemplate="{StaticResource AttributeTemplate}"/>
        </Expander>
    </DataTemplate>

</ResourceDictionary>