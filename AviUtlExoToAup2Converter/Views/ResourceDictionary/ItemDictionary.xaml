<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vmia="clr-namespace:AviUtlExoToAup2Converter.ViewModels.Item.Aup2"
                    xmlns:vmie="clr-namespace:AviUtlExoToAup2Converter.ViewModels.Item.Exo"
                    xmlns:mi="clr-namespace:AviUtlExoToAup2Converter.Models.Item">
    <DataTemplate x:Key="AttributeTemplate" DataType="{x:Type mi:IAttribute}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding Name}"/>
            <TextBlock Grid.Column="1" Text="{Binding ValueString}"/>
        </Grid>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vmia:Aup2ItemViewModel}">
        <ItemsControl Grid.Row="1" ItemsSource="{Binding Scenes}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vmia:SceneViewModel}">
        <Border BorderBrush="LightGray"
                BorderThickness="1"
                Margin="2"
                CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ItemsControl ItemsSource="{Binding Attributes}" ItemTemplate="{StaticResource AttributeTemplate}"/>
                <ItemsControl Grid.Row="1" ItemsSource="{Binding ObjectItems}"/>
            </Grid>
        </Border>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vmia:ObjectItemViewModel}">
        <Border BorderBrush="Gray"
                BorderThickness="1"
                Margin="2"
                CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ItemsControl ItemsSource="{Binding Attributes}" ItemTemplate="{StaticResource AttributeTemplate}"/>
                <ItemsControl Grid.Row="1" Grid.ColumnSpan="4"
                              Padding="20,0,0,0" ItemsSource="{Binding Effects}"/>
            </Grid>
        </Border>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vmia:GeneralEffectViewModel}">
        <Expander BorderBrush="DarkGray"
          BorderThickness="1"
          Margin="2"
          Header="{Binding Name}">
            <ItemsControl ItemsSource="{Binding Attributes}" ItemTemplate="{StaticResource AttributeTemplate}"/>
        </Expander>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vmie:GeneralFilterViewModel}">
        <Expander BorderBrush="DarkGray"
              BorderThickness="1"
              Margin="2"
              Header="{Binding Name}">
            <ItemsControl ItemsSource="{Binding Attributes}" ItemTemplate="{StaticResource AttributeTemplate}"/>
        </Expander>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vmie:ExoItemViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ItemsControl ItemsSource="{Binding Attributes}" ItemTemplate="{StaticResource AttributeTemplate}"/>
            <ItemsControl Grid.Row="1" ItemsSource="{Binding ObjectItems}"/>
        </Grid>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vmie:ObjectItemViewModel}">
        <Border BorderBrush="Gray"
                BorderThickness="1"
                Margin="2"
                CornerRadius="5">
            <StackPanel>
                <ItemsControl ItemsSource="{Binding Attributes}" ItemTemplate="{StaticResource AttributeTemplate}"/>
                <ItemsControl Grid.Row="3" Grid.ColumnSpan="2"
                              Padding="20,0,0,0" ItemsSource="{Binding Filters}"/>
            </StackPanel>
        </Border>
    </DataTemplate>
</ResourceDictionary>